<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="iee.yh.Mymall.product.dao.AttrGroupDao">

<!--	 可根据自己的需求，是否要使用 -->
    <resultMap type="iee.yh.Mymall.product.entity.AttrGroupEntity" id="attrGroupMap">
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrGroupName" column="attr_group_name"/>
        <result property="sort" column="sort"/>
        <result property="descript" column="descript"/>
        <result property="icon" column="icon"/>
        <result property="catelogId" column="catelog_id"/>
    </resultMap>

    <resultMap id="res" type="iee.yh.Mymall.product.vo.SkuItemVo$spuItemAttrGroupVo">
        <result property="groupName" column="attr_group_name"></result>
        <collection property="attrs" ofType="iee.yh.Mymall.product.vo.SkuItemVo$spuBaseAttrVo">
            <result property="attrName" column="attr_name"></result>
            <result property="attrValue" column="attr_value"></result>
        </collection>
    </resultMap>
    
    <select id="getAttrGorupWithAttrsBySpuId" resultMap="res">
        SELECT
            pav.spu_id,
            ag.attr_group_name,
            ag.attr_group_id,
            aar.attr_id,
            attr.attr_name,
            pav.attr_value
        FROM pms_attr_group ag
        LEFT JOIN pms_attr_attrgroup_relation arr ON arr.attr_group_id = ag.attr_group_id
        LEFT JOIN pms_attr attr ON attr.attr_id = arr.attr_id
        LEFT JOIN pms_product_attr_value pav ON pav.attr_id = attr.attr_id
        WHERE ag.catalog_id=#{catalogId} AND pav.spu_id = #{spuId}
    </select>
</mapper>